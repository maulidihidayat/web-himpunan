generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Member {
  id            String   @id @default(cuid())
  role_id       String
  email         String
  phone_number  String
  address       String
  gender        String
  division_id   String  
  birthdate     String
  name          String
  nim           String
  active        Boolean
  class_id      String  
  generation_id String  
  user          Users?
  role          Roles?  @relation(fields: [role_id], references: [id])
  news          News[]  
  chat Chats[]
  event Events[]
  
  @@map("members")
}

model Users {
  id        String  @id @default(cuid())
  member_id String  @unique
  password  String
  username  String
  profile   String
  member    Member? @relation(fields: [member_id], references: [id])

  @@map("Users")
}

model Roles {
  id      String   @id @default(cuid())
  name    String
  isAdmin Boolean
  members Member[]
}

model Divisions {
  id   String @id @default(cuid())
  name String

  @@map("Divisions")
}

model Generations {
  id   String @id @default(cuid())
  year String

  @@map("Generations")
}

model News {
  id          String   @id @default(cuid())
  name        String
  description String
  image       String
  video       String
  author      String
  date        DateTime @default(now())
  member_id   String  @unique
  member      Member @relation(fields: [member_id], references: [id])  
}



model Chats {
  id        String  @id @default(cuid())
  theme     String
  message   String
  member_id String
  member Member? @relation( fields: [member_id], references: [id])
}

model Events {
  id          String  @id @default(cuid())
  type        String
  title       String
  description String
  date        DateTime @default(now())
  image       String
  video       String
  member     Member[] 
}
